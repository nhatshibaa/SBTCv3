
@{
    ViewData["Title"] = "SendMail";
}

<h1>SendMail</h1>
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="row">
            <div class="form-group col-md-6">
                <input type="email" class="form-control" name="userEmail" />
            </div>
            <div class="form-group col-md-6">
                <input type="submit" value="Send Email" />
            </div>
        </div>
    }
